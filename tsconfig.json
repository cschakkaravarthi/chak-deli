{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
    "webpack.config.js",
    "src/config/webpack.*.js",
    "server.js",
    "coverage"
  ]
}
